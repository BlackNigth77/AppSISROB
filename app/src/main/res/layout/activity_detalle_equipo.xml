        android:gravity="center"
        android:text="TABLERO"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toEndOf="@+id/txtDetEquipOp1"
        app:layout_constraintTop_toBottomOf="@+id/DetEquipOp2" />

    <ImageView
        android:id="@+id/DetEquipOp4"
        android:layout_width="69dp"
        android:layout_height="59dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/custom_imput"
        app:layout_constraintBottom_toTopOf="@+id/txtDetEquipOp4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDetEquipOp1"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_listadepartes" />

    <TextView
        android:id="@+id/lblTituloDetalle2"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:background="@color/cardview_dark_background"
        android:fontFamily="@font/arimo"
        android:gravity="center"
        android:text="DETALLE DE FLOTA"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDetEquipOp4" />

    <ImageView
        android:id="@+id/DetEquipOp5"
        android:layout_width="69dp"
        android:layout_height="59dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_imput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTituloDetalle2"
        app:srcCompat="@drawable/ic_baseline_agriculture_24" />


    <TextView
        android:id="@+id/txtDetEquipOp5"
        android:layout_width="77dp"
        android:layout_height="42dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="308dp"
