        android:gravity="center"
        android:text="FLOTA POR UM"
        android:textColor="@color/white"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DetEquipOp5" />

    <TextView
        android:id="@+id/lblTituloDetalle3"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:background="@color/cardview_dark_background"
        android:fontFamily="@font/arimo"
        android:gravity="center"
        android:text="DETALLE DE REPUESTOS"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDetEquipOp5" />

    <ImageView
        android:id="@+id/DetEquipOp6"
        android:layout_width="69dp"
        android:layout_height="59dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_imput"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTituloDetalle3"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_elec_ecuecm" />

