<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_gris2"
    tools:context=".DetalleEquipoActivity">

    <TextView
        android:id="@+id/lblEquipoElegido"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000000"
        android:fontFamily="@font/arimo"
        android:gravity="center"
        android:text="EQUIPO SELECCIONADO"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblTituloDetalle"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@color/cardview_dark_background"
        android:fontFamily="@font/arimo"
        android:gravity="center"
        android:text="DETALLE DEL EQUIPO"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblEquipoElegido" />

    <ImageView
        android:id="@+id/DetEquipOp1"
        android:layout_width="69dp"
        android:layout_height="59dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_imput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTituloDetalle"
        app:srcCompat="@drawable/ico_detequ_descripcion" />


    <ImageView
        android:id="@+id/DetEquipOp2"
        android:layout_width="69dp"
        android:layout_height="59dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_imput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.177"
        app:layout_constraintStart_toEndOf="@+id/DetEquipOp1"
        app:layout_constraintTop_toBottomOf="@+id/lblTituloDetalle"
        app:srcCompat="@drawable/ic_ico_detequ_tablero" />

    <TextView
        android:id="@+id/txtDetEquipOp1"
        android:layout_width="81dp"
        android:layout_height="40dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/custom_buttom"
        android:gravity="center"
        android:text="MANUAL"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
