<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroSolicitud">

    <TextView
        android:id="@+id/txtTitRegSolicitud"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000000"
        android:fontFamily="@font/arimo"
        android:gravity="center"
        android:text="SOLICITUD REPUESTO"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/abril_fatface"
        android:textColor="@color/principal"
        android:text="Codigo :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitRegSolicitud" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/abril_fatface"
        android:text="Fecha :"
        android:textColor="@color/principal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/abril_fatface"
        android:text="Descripcion :"
        android:textColor="@color/principal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRegFechaSol" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/abril_fatface"
        android:text="Cantidad :"
        android:textColor="@color/principal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRegSolDescripcion" />

    <TextView
        android:id="@+id/txtRegCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/abril_fatface"
        android:text="XXXX-XXX"
        android:textColor="@color/principal"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/txtTitRegSolicitud" />

    <EditText
        android:id="@+id/txtRegFechaSol"
        android:layout_width="242dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/custom_imput"
        android:drawableStart="@drawable/custom_focus_fecha_noticia"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/arimo"
        android:hint="Fecha de la solicitud"
        android:inputType="text"
        android:minHeight="54dp"
        android:paddingStart="10dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/txtRegSolDescripcion"
        android:layout_width="369dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/custom_imput"
        android:ems="10"
        android:fontFamily="@font/arimo"
        android:gravity="start|top"
        android:hint="Ingrese DescripciÃ³n"
        android:inputType="textMultiLine"
        android:paddingStart="10dp"
        android:textColor="@color/principal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/txtRegCantidad"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/custom_imput"
        android:drawableStart="@drawable/custom_focus_number"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Cantidad solicitada"
        android:fontFamily="@font/arimo"
        android:inputType="number"
        android:minHeight="54dp"
        android:paddingStart="10dp"
        android:textColor="@color/principal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/btnRegSolRep"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_buttom"
        android:drawableStart="@drawable/ic_save"
        android:drawablePadding="10dp"
        android:fontFamily="@font/arimo"
        android:paddingHorizontal="15dp"
        android:text="GRABAR SOLICITUD"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRegCantidad"
        app:layout_constraintVertical_bias="0.225"
        />
</androidx.constraintlayout.widget.ConstraintLayout>